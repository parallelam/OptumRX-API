{
  "name": "optumrx-challenge-backend-node",
  "version": "0.1.0",
  "description": "REST API",
  "main": "dist",
  "engines": {
    "node": "15.2.1",
    "npm": "6.10.1"
  },
  "scripts": {
    "build": "tsc",
    "compile": "tsc",
    "start": "npm run compile && npm run serve",
    "serve": "node dist/index.js",
    "dev": "tsc --watch & NODE_ENV=development nodemon dist",
    "lint": "eslint . --ext .ts --quiet",
    "fix": "eslint --fix .",
    "local-test": "npm run lint && cross-env NODE_ENV=local mocha -u tdd --reporter spec --exit",
    "dev-test": "npm run lint && cross-env NODE_ENV=dev mocha -u tdd --reporter spec --exit",
    "deploy": "git add . && git commit -m Heroku && git push"
  },
  "dependencies": {
    "class-validator": "^0.9.1",
    "cors": "^2.8.5",
    "cross-env": "^5.2.0",
    "dotenv": "^8.0.0",
    "errorhandler": "^1.5.1",
    "express": "^4.17.1",
    "express-validator": "^6.1.1",
    "http": "0.0.0",
    "http-errors": "^1.7.3"
  },
  "devDependencies": {
    "@types/supertest": "^2.0.8",
    "@types/body-parser": "^1.17.0",
    "@types/chai": "^4.1.7",
    "@types/config": "0.0.34",
    "@types/cors": "^2.8.5",
    "@types/dotenv": "^6.1.1",
    "@types/errorhandler": "0.0.32",
    "@types/express": "^4.17.0",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.6.2",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "eslint": "^6.0.1",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-plugin-import": "^2.18.0",
    "mocha": "^6.1.4",
    "mocha-typescript": "^1.1.17",
    "nodemon": "^1.19.1",
    "prettier": "^1.18.2",
    "ts-node": "^8.3.0",
    "tsconfig-paths": "^3.8.0",
    "typescript": "^3.5.3"
  }
}
